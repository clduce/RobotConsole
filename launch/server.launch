<launch>

  <env name="ROSCONSOLE_CONFIG_FILE"
       value="$(find roboquest_ui)/rosconsole_config"/>

  <env name="ROSCONSOLE_FORMAT"
       value="${time} ${severity} ${node}-${function}: ${message}"/>

  <env name="ROS_PYTHON_LOG_CONFIG_FILE"
       value="$(find roboquest_ui)/rospython_config"/>

  <arg name="hat_port" default="/dev/ttyTHS1"/>
  <arg name="hat_data_rate" default="57600"/>

  <node
    pkg="roboquest_core"
    type="roboquest_base.py"
    name="roboquest_base"
    output="log"
    respawn="true"
    respawn_delay="30">
      <param name="hat_port" value="$(arg hat_port)" />
      <param name="hat_data_rate" value="$(arg hat_data_rate)" />
  </node>

  <node
    pkg="roboquest_ui"
    type="server.js"
    name="server"
    output="log"
    respawn="true"
    respawn_delay="5"/>

  <node
    pkg="roboquest_core"
    type="servo_controller.py"
    name="servo_controller"
    output="log"
    respawn="false">
  </node>

  <node
    pkg="roboquest_core"
    type="motor_controller.py"
    name="motor_controller"
    output="log"
    respawn="false">
  </node>

</launch>
